{
  "compilerOptions": {
    // Modules, JS target and libs
    "target": "ES6",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // No sourcemaps
    "sourceMap": false,

    // Allow JS
    "allowJs": true,

    // Build root and out dir
    "outDir": "dist",
    "rootDir": "src",

    // JSON
    "resolveJsonModule": true,

    // Skip .d.ts files check
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // Correct casing
    "forceConsistentCasingInFileNames": true,

    // Imports configuration
    "importHelpers": true,

    // Decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Babel compiling
    "declaration": true,
    "emitDeclarationOnly": true,

    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "types": ["discord.js", "node"],

    // Module paths
    "baseUrl": "src",
    "paths": {
      "@deepz/types/*": ["@types/*"],
      "@commands/": ["commands/*"],
      "@helpers": ["helpers/index"],
      "@database": ["database/index"],
      "@structures": ["structures/index"],
      "@events/*": ["events/*"],
      "@services": ["services/index"],
      "@deepz/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
